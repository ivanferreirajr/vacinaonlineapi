generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int          @id @default(autoincrement())
  email           String       @unique
  senha           String
  cpf             String       @unique
  telefone        String?
  data_nascimento DateTime
  tipo            String       @default("paciente")
  coren           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  Endereco        Endereco[]
  Vacina          Vacina[]
  Dependente      Dependente[]
}

model Endereco {
  id        Int      @id @default(autoincrement())
  cep       String
  cidade    String
  bairro    String
  rua       String
  numero    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}

model Vacina {
  id              Int          @id @default(autoincrement())
  codigo          String
  nome            String
  lote            String
  data_vencimento DateTime
  data_vacinacao  DateTime
  paciente        Usuario      @relation(fields: [pacienteId], references: [id])
  pacienteId      Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  Dependente      Dependente[]
}

model Dependente {
  id              Int      @id @default(autoincrement())
  cpf             String
  nome            String
  data_nascimento DateTime
  paciente        Usuario  @relation(fields: [pacienteId], references: [id])
  pacienteId      Int
  vacina          Vacina   @relation(fields: [vacinaId], references: [id])
  vacinaId        Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
